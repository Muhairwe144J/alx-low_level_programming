#include "main.h"

/**
 * cap_string - Capitalizes all words of a string
 * @s: Pointer to the string to capitalize
 *
 * Return: Pointer to the capitalized string
 */
char *cap_string(char *s)
{
	int i;
	int capitalize = 1;

	for (i = 0; s[i]; i++)
	{
		if (s[i] == ' ' || s[i] == '\t' || s[i] == '\n' ||
		    s[i] == ',' || s[i] == ';' || s[i] == '.' ||
		    s[i] == '!' || s[i] == '?' || s[i] == '"' ||
		    s[i] == '(' || s[i] == ')' || s[i] == '{' ||
		    s[i] == '}')
		{
			capitalize = 1;
		}
		else if (capitalize && s[i] >= 'a' && s[i] <= 'z')
		{
			s[i] -= 32;
			capitalize = 0;
		}
		else
		{
			capitalize = 0;
		}
	}

	return (s);
}

